<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiente"
    tools:context=".GerenciarFinancasActivity" 
    >

    <LinearLayout
        android:id="@+id/linearLayout1GerenciarFinancas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" 
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/editTextAdicionarGerenciarFinancas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:inputType="numberDecimal" >
        </EditText>

        <Button
            android:id="@+id/buttonAdicionarGerenciarFinancas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/button_shape"
            android:text="Adicionar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1GerenciarFinancas"
        android:layout_marginTop="16dp" 
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/editTextQuitarGerenciarFinancas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:inputType="numberDecimal" >
        </EditText>

        <Button
            android:id="@+id/buttonQuitarGerenciarFinancas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/button_shape"
            android:text="Quitar" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonQuitarTudoGerenciarFinancas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.51"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/linearLayout1"
        android:text="Quitar Tudo"/>

    <TextView
        android:id="@+id/textViewDividaTotalGerenciarFinancas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="DÃ­vida Total"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewDividaGerenciarFinancas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDividaTotalGerenciarFinancas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="..."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonVoltarGerenciarFinancas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="0.51"
        android:background="@drawable/button_shape"
        android:text="Voltar" />

</RelativeLayout>
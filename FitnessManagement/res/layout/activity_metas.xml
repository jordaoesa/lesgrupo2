<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiente"
    tools:context=".MetasActivity" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:text="cm"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <CheckedTextView
        android:id="@+id/checkedTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextPesoPerderMeta"
        android:layout_alignBottom="@+id/editTextPesoPerderMeta"
        android:layout_alignParentRight="true"
        android:text="Kg"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editTextPesoAtualMeta"
        android:text="Qual o seu peso atual?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextPesoAtualMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerPraticaMeta"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView6"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editTextPesoPerderMeta"
        android:layout_below="@+id/textView7"
        android:text="Quanto peso deseja perder?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextPesoPerderMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPesoAtualMeta"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView6"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/editTextAlturaMeta"
        android:text="Altura"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextAlturaMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/editTextPesoPerderMeta"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerPraticaMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:background="@drawable/button_shape"
         />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextAlturaMeta"
        android:layout_marginTop="17dp"
        android:text="PrÃ¡tica de exercicios"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <CheckedTextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextPesoAtualMeta"
        android:layout_alignBottom="@+id/editTextPesoAtualMeta"
        android:layout_alignParentRight="true"
        android:text="Kg"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonCalcularMeta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.51"
        android:background="@drawable/button_shape"
        android:layout_above="@+id/buttonVoltarActivityMetas"
        android:layout_alignParentLeft="true"
        android:text="Calcular Meta" />

    <Button
        android:id="@+id/buttonVoltarActivityMetas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="0.51"
        android:background="@drawable/button_shape"
        android:text="Voltar" />

</RelativeLayout>
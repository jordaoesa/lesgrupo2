<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitnessManagementActivity" >

    <TextView
        android:id="@+id/textViewLogotipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Fitness Management"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonCadastrarAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewLogotipo"
        android:text="Cadastrar Alunos" />

    <Button
        android:id="@+id/buttonCadastrarDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonCadastrarAlunos"
        android:text="Cadastrar Dados" />

    <Button
        android:id="@+id/buttonVisualizarEstatisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonCadastrarDados"
        android:text="Visualizar EstatÃ­sticas" />

    <Button
        android:id="@+id/buttonAgendamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonVisualizarEstatisticas"
        android:text="Agendamento" />

    <Button
        android:id="@+id/botaoCadastramentoExercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonAgendamento"
        android:text="Cadastrar Exercicio" />

    <Button
        android:id="@+id/botaoCadastramentoAtividade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/botaoCadastramentoExercicio"
        android:text="Cadastrar Atividade" />

    <Button
        android:id="@+id/botaoCadastramentoFicha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/botaoCadastramentoAtividade"
        android:text="Cadastrar Ficha" />

</RelativeLayout>
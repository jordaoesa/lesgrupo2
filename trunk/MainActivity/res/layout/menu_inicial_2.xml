<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutlogoDSC"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logoDSC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/logo_dsc" />

  <TextView
                android:id="@+id/textViewUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:text="Ciência da Computação"
                android:typeface="sans"
                android:textColor="#000000"
                android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutGridIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <GridView
        android:id="@+id/gridViewMenuIniciar"
        android:layout_width="344dp"
        android:layout_height="260dp"
        android:layout_below="@+id/linearLayoutlogoDSC"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:columnWidth="200dp"
        android:numColumns="1"
        android:stretchMode="columnWidth" >
    </GridView>

</RelativeLayout>
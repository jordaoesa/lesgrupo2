<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ufcg.fitnessmanagement"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="9" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="br.edu.ufcg.fitnessmanagement.MAinActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
           	android:name="org.achartengine.GraphicalActivity"
           	android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.VisualizarAlunosActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_visualizar_alunos" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.PerfilDoAlunoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_ficha_do_aluno" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.CadastrarDadosActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_cadastrar_dados" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.CadastrarAtividadeActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_cadastrar_exercicio" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.CadastrarTreinoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_cadastrar_treino" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.CriarFichaActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_criar_ficha" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.VisualizarEstatisticasActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_visualizar_estatisticas" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.CadastrarAlunoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_cadastrar_aluno" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.GerenciarFinancasActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_gerenciar_financas" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.AgendarAcompanhamentoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_agendar_acompanhamento" >
        </activity>
        <activity
            android:name="br.edu.ufcg.fitnessmanagement.CriarExercicioMaquinaGMuscularActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_criar_exercicio_maquina_gmuscular_bd" >
        </activity>
        <activity
            android:name="br.edu.ufcg.agendamento.AlarmDetails"
            android:screenOrientation="portrait"
            android:label="Details of the alarm" >
            <intent-filter>
                <action android:name="br.edu.ufcg.agendamento.AlarmDetails" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="br.edu.ufcg.agendamento.DisplayNotification" >
            <intent-filter>
                <action android:name="br.edu.ufcg.agendamento.DisplayNotification" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
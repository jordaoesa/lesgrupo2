<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiente"
    tools:context=".AnamneseActivity" >

    <Button
        android:id="@+id/buttonAvancarAnamneseHistoricoDeMedicamentos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_shape"
        android:text="Avançar" />

    <ScrollView
        android:id="@+id/scrollViewAnamneseHistoricoDeMedicamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAvancarAnamneseHistoricoDeMedicamentos"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/linearLayoutAnamneseHistoricoDeMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta11Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/radioButtonSimPergunta11Anamnese"
                    android:layout_alignParentLeft="true"
                    android:text="Faz uso de Medicamentos?"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/radioGroupPergunta11Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewPergunta11Anamnese"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioButtonSimPergunta11Anamnese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim"
                        android:textColor="@color/white"
                        android:textSize="20px" />

                    <RadioButton
                        android:id="@+id/radioButtonNaoPergunta11Anamnese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não"
                        android:textColor="@color/white"
                        android:textSize="20px" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta12Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Há quanto tempo?"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/editTextPergunta12Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewPergunta12Anamnese"
                    android:ems="10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta13Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Qual medicamento?"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/editTextPergunta13Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewPergunta13Anamnese"
                    android:ems="10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta14Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/radioButtonSimPergunta14Anamnese"
                    android:layout_alignParentLeft="true"
                    android:text="Já fez alguma cirurgia?"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/radioGroupPergunta14Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewPergunta14Anamnese"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioButtonSimPergunta14Anamnese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim"
                        android:textColor="@color/white"
                        android:textSize="20px" />

                    <RadioButton
                        android:id="@+id/radioButtonNaoPergunta14Anamnese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não"
                        android:textColor="@color/white"
                        android:textSize="20px" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta15Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Qual cirurgia?"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/editTextPergunta15Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewPergunta15Anamnese"
                    android:ems="10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta16Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Há quanto tempo?"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/editTextPergunta16Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewPergunta16Anamnese"
                    android:ems="10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewPergunta17Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/radioButtonSimPergunta17Anamnese"
                    android:layout_alignParentLeft="true"
                    android:text="Sente Dores?"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/radioGroupPergunta17Anamnese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewPergunta17Anamnese"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioButtonSimPergunta17Anamnese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim"
                        android:textColor="@color/white"
                        android:textSize="20px" />

                    <RadioButton
                        android:id="@+id/radioButtonNaoPergunta17Anamnese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não"
                        android:textColor="@color/white"
                        android:textSize="20px" />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
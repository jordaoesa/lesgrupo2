<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiente" >

    <Spinner
        android:id="@+id/spinnerSemanaAcompanhamento"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Data Acompanhamento"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSemanaAcompanhamento"
        android:text="Total Calorias"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextCaloriasIngeridasMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonSalvarAcompanhamentoMeta"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/button_shape"
            android:text="Salvar Acompanhamento" />

        <Button
            android:id="@+id/buttonVoltarAcompanhamentoActivityMetas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/button_shape"
            android:text="Voltar" />

    </LinearLayout>

</RelativeLayout>
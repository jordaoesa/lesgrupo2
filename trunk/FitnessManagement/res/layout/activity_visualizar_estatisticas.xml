<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewEstatisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatisticas"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonEstatisticasPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso" />
    <Button
        android:id="@+id/buttonEstatisticasCalorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorias" />
    <Button
        android:id="@+id/buttonEstatisticasBraco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamanho BraÃ§o" />
    <Button
        android:id="@+id/buttonEstatisticasPerna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamanho Perna" />
    <Button
        android:id="@+id/buttonEstatisticasIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonEstatisticasVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Voltar" />
        
    </RelativeLayout>

        
    
</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitnessManagementActivity" >

    <TextView
        android:id="@+id/textViewLogotipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Fitness Management"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonGerenciarAlunosMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Gerenciar Alunos" />

    <Button
        android:id="@+id/buttonCadastrarAlunosMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGerenciarAlunosMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Cadastrar Alunos" />

    <Button
        android:id="@+id/buttonAddAlunoMain"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="add aluno" />

    <Button
        android:id="@+id/buttonGerenciarExercMuscMaquiMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonGerenciarAlunosMain"
        android:text="Gerenciar Exerc/Musc/Maqui" />

</RelativeLayout>
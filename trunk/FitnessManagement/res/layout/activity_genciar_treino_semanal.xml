<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlTreinoSemanal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradiente"
    tools:context=".GenciarTreinoSemanal" >

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="140dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/botaoSegundaCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradiente"
            android:text="Seg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/botaoTercaCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/gradiente"
            android:text="Ter"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/botaoQuartaCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/gradiente"
            android:text="Qua"
            android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/botaoQuintaCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradiente"
            android:text="Qui"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/botaoSextaCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/gradiente"
            android:text="Sex"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/botaoSabadoCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/gradiente"
            android:text="Sab"
            android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/botaoDomingoCS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.51"
            android:background="@drawable/gradiente"
            android:text="Dom"
            android:textColor="@color/white" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="140dp" />
    </TableRow>

    <Button
        android:id="@+id/imgBtVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.51"
        android:background="@drawable/button_shape"
        android:text="Voltar" />

</TableLayout>
		    </RelativeLayout>
		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content">
		
		        <EditText
		            android:id="@+id/editTextCoxaDireita"
		            android:layout_width="120dp"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_alignParentTop="true"
		            android:ems="10"
		            android:hint="50 cm"
